<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.nf.generalbook.dao.CollectDao">
    <resultMap id="collect" type="edu.nf.generalbook.entity.Collect">
        <id property="coId" column="co_id"/>
        <result property="bId" column="b_id"/>
        <result property="createDate" column="create_date"/>
        <association property="commodity">
            <id property="bId" column="b_id"/>
            <result property="bName" column="b_name"/>
            <result property="author" column="author"/>
            <result property="press" column="press"/>
            <result property="notes" column="notes"/>
            <result property="tId" column="t_id"/>
            <result property="issuingDate" column="issuing_date"/>
            <result property="produceDate" column="produce_date"/>
            <result property="picture" column="picture"/>
            <result property="inventory" column="inventory"/>
            <result property="state" column="state"/>
        </association>
    </resultMap>
    <select id="listAddressInfo" resultMap="collect">
        select co.co_id,co.b_id,co.creste_date,c.b_id,c.b_name,c.author,c.press,c.notes,c.t_id,c.issuing_date,c.produce_date,c.picture,c.inventory,c.state
        from collect co join commodity c on co.b_id = c.b_id
    </select>

</mapper>